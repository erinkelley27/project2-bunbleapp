<div class="id-partial">
    <div class="burger-image">
        <img src="{{ image }}" alt="{{ name }}" class="image">
    </div>
    <div class="burger-name">
        <a class="burger-link" href="/burger/{{id}}">
        {{ name }}
        </a>
    </div>
    <div class="burger-desc">
        {{ description }}
    </div>
    <div class="toppings">
        <div class="bun">{{ toppings.bun }}</div>
        <div class="meat">{{ toppings.meat }}</div>
        <div class="topping1">{{ toppings.topping1 }}</div>
        <div class="topping2">{{ toppings.topping2 }}</div>
        <div class="topping3">{{ toppings.topping3 }}</div>
        <div class="topping4">{{ toppings.topping4 }}</div>
        <div class="topping5">{{ toppings.topping5 }}</div>
    </div>
</div>

{{#if comments.length}}
  {{#each comments}}
    <div class="comments-list">
      <div class="card-content">
        <span class="card-title">
          {{ content }}
        </span>
      </div>
      <div class="card-action">
        <a href="/user/{{ author.id }}" class="">{{ author.local.email }}</a>
        <span class="burger__date">{{ createdAt }}</span>
      </div>
    </div>
  {{/each}}
{{/if}}

<div class="comment-form">
  <div class="card-content">
    <h6 class="card-title">Add a comment:</h6>
    <form method="POST" action="/burger/{{id}}?_method=PUT" class="row">
        <input type="text" name="content" id="">
        <input class="btn" type="submit" value="Submit">
    </form>
  </div>
</div>